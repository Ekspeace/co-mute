@model User
@{
    ViewData["Title"] = "Register";
}
<form method="post" asp-controller="User" asp-action="Register">
    <h2>Register</h2>

    <div class="form-group">
        <label for="name">Name</label><span class="text-danger">*</span>
        <input type="text" id="name" asp-for="Name" class="form-control" placeholder="First name" autofocus>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="surname">Surname</label><span class="text-danger">*</span>
        <input type="text" id="surname" asp-for="Surname" class="form-control" placeholder="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" id="phone" asp-for="Phone" class="form-control" placeholder="Phone number">
    </div>

    <div class="form-group">
        <label for="email">Email</label><span class="text-danger">*</span>
        <input type="email" id="email" asp-for="Email" class="form-control" placeholder="Email address">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">Password</label><span class="text-danger">*</span>
        <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="confirm-password">Confirm Password</label>
        <input type="password" id="confirm-password" class="form-control" placeholder="Confirm password" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button class="btn btn-primary" type="submit" id="sign-in">Register</button>
    </div>
</form>