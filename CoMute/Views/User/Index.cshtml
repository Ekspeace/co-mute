@model LoginRequest
@{
    ViewData["Title"] = "Login";
}

<div class="container row justify-content-center">
    <div class="col-md-4 col-md-offset-4">
        <form id="login" method="post" asp-controller="User" asp-action="Login">
            <h2 class="text-center">Sign In</h2>
            <div class="d-flex">
                <input type="email" id="inputEmail" asp-for="Email" class="form-control mb-2" placeholder="Email address" required autofocus>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <input type="password" id="inputPassword" asp-for="Password" class="form-control mb-3" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button class="btn btn-primary btn-block" type="submit" id="sign-in">Sign in</button>
        </form>
    </div>
</div>